<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Scrollable Content Wrapper -->
    <ScrollView
        android:id="@+id/mainContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUploadImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postavite slike"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_image_background"/>

            <GridLayout
                android:id="@+id/selectedImagesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/etTitle"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="?attr/textFillColor"
                android:background="@color/editTextBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Naslov" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opis"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="?attr/textFillColor"
                android:background="@color/editTextBack"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top|start" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Broj Mobitela"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="?attr/textFillColor"
                android:background="@color/editTextBack"
                android:inputType="number" />


            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cijena"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="@color/textColorPrimary"
                android:background="@color/editTextBack"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Broj Godina"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="@color/textColorPrimary"
                android:background="@color/editTextBack"
                android:inputType="number" />

            <EditText
                android:id="@+id/address"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="@color/textColorPrimary"
                android:background="@color/editTextBack"
                android:hint="Adresa" />

            <EditText
                android:id="@+id/etBreed"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColorHint="?attr/textFillColor"
                android:textColor="@color/textColorPrimary"
                android:background="@color/editTextBack"
                android:hint="Vrsta" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/croatian_regions"
                android:padding="6dp"
                android:background="@color/editTextBack"
                android:layout_marginBottom="10dp"/>


            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/category_options"
                android:padding="6dp"
                android:background="@color/editTextBack"
                android:layout_marginBottom="10dp"/>



            <Spinner
                android:id="@+id/typeOfAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/typeOfAd"
                android:padding="6dp"
                android:background="@color/editTextBack"
                android:layout_marginBottom="10dp"/>



            <Spinner
                android:id="@+id/bloodType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/bloodType"
                android:padding="6dp"
                android:background="@color/editTextBack"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/chip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/chip"
                android:padding="6dp"
                android:background="@color/editTextBack"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/vacinated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/vacine"
                android:padding="6dp"
                android:background="@color/editTextBack"
                android:layout_marginBottom="10dp"/>


            <Button
                android:id="@+id/btnSaveAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spremi Oglas" />

        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar Overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
