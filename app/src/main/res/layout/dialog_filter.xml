<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category Dropdown -->
        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/category_options"
            android:hint="Odaberi Kategoriju"
            />

        <!-- Region Dropdown -->
        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/croatian_regions"
            android:hint="Odaberi Županiju"
            />

        <!-- Type of Ad Dropdown -->
        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerTypeOfAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/typeOfAd"
            android:hint="Tip Oglasa"

            />

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/bloodTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bloodType"
            android:hint="Tip životinje"
            />

        <!-- Breed Input -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:id="@+id/etMinPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min Inznos"
                android:inputType="numberDecimal"
                android:background="@drawable/rounded_addad_background"
                android:gravity="center"
                android:layout_marginRight="2dp"/>

            <EditText
                android:id="@+id/etMaxPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max Iznos"
                android:inputType="numberDecimal"
                android:background="@drawable/rounded_addad_background"
                android:gravity="center"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

        <!-- Minimum Price Input -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >


        <EditText
            android:layout_weight="1"
            android:id="@+id/etMinAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Min Godina"
            android:inputType="number"
            android:background="@drawable/rounded_addad_background"
            android:layout_marginRight="2dp"
            />

        <!-- Maximum Age Input -->
        <EditText

            android:layout_weight="1"
            android:id="@+id/etMaxAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Max Godina"
            android:inputType="number"
            android:background="@drawable/rounded_addad_background"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="10dp">



        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRIMJERNI"
            />
    </LinearLayout>
        <!-- Apply and Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="6dp">



            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IZAĐI"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="6dp">
        <Button
            android:id="@+id/btnRemoveFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESETIRAJ"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
