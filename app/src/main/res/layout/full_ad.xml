<!-- res/layout/news_article_layout.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image at the top -->
        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="" />

        <!-- Date and time below the image -->
        <TextView
            android:id="@+id/news_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October 19, 2024 - 10:00 AM"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

        <!-- Title below the date and time -->
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exciting News Title Here"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Main text below the title -->
        <TextView
            android:id="@+id/news_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here goes the detailed content of the news article. It can be a few paragraphs long, explaining the news in more detail."
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
